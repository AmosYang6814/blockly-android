<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
            android:id="@+id/img_list_title"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pingmu"></ImageView>

    <TextView
            android:id="@+id/list_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_list_title"
            android:layout_marginLeft="20dp"
            android:text="Screen 4"></TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_list_title"
            android:layout_below="@+id/list_text_4"
            android:layout_marginLeft="20dp"
            android:text="扩展屏幕"></TextView>



</RelativeLayout>