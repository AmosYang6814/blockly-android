<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="angle_bg">#ffaaaaaa</color>
    <color name="date_bg">#ffaaaaaa</color>
    <color name="field_text">#ff212121</color>
    <color name="label_text">@android:color/white</color>
    <color name="mutator_background_color">#ffbbbbff</color>
    <dimen name="field_horizontal_spacing">8dip</dimen>
    <dimen name="min_block_width">32dp</dimen>
    <dimen name="min_field_width">30dp</dimen>
    <dimen name="spinner_end_padding">36dip</dimen>
    <string name="app_name">blocklylib-vertical</string>
    <style name="BlocklyVerticalTheme" parent="BlocklyTheme">
        <item name="blockTextSize">24sp</item>
        <item name="blockHat">false</item>
    </style>
    <declare-styleable name="BlocklyVertical">
        <!-- The default text size for fields in a block. -->
        <attr format="dimension|reference" name="blockTextSize"/>
        <!-- Whether blocks without outputs or previous connections have hats. -->
        <attr format="boolean" name="blockHat"/>
    </declare-styleable>
</resources>